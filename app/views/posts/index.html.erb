<h2><%= link_to "Locations", :locations %></h2>
<h2> Posts </h2>

All your posts are belong to us.

<% if signed_in? %>
  <h2>Add a Post</h2>

  <%= form_for @post do |form| %>
    <%= render "error_messages", target: @post %>
    <div>
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
    <div>
      <%= form.label :body %>
      <%= form.text_area :body %>
    </div>
    <div>
      <%= form.label :price %>
      <%= form.text_field :price %>
    </div>
    <div>
      <%= form.label :location %>
      <%= form.collection_select :location_id, @locations, :id, :name %>
    </div>
    <div>
      <%= form.submit %>
    </div>
  <% end %>
<% end %>

<h2>All Posts</h2>
<ul>
  <% @posts.each do |post| %>
    <li>
      <%= post.title %>
      <%= form_for post do |form| %>
        <%= form.label :spam, "Check the box if you suspect the post is spam" %>
        <%= form.check_box :spam %>
        <%= form.submit "Submit Spam Complaint" %>
      <% end %>
    </li>
  <%end%>
<% if current_user.admin? %>
  <h3> Spam </h3>
  </ul>
  <% @spam.each do |spam| %>
    <li> 
      <%= spam.title %>
      <%= button_to "Delete this Spam", spam, method: :delete %>
    </li>
  <% end %>
  </ul>
<% end %>
