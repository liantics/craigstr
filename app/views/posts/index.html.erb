<h2> Posts </h2>

All your posts are belong to us

<h2>Add a Post</h2>

<%= form_for @post do |form| %>
  <%= render "error_messages", target: @post %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>
  <div>
    <%= form.submit  %>
  </div>
<% end %>
