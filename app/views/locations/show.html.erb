<h2>Posts in <%= @location.name %></h2>
<ul>
  <% @posts.each do |post| %>
    <li><%= link_to post.title, post %></li>
  <% end %>
</ul>
<h2> Catagories in <%= @location.name %> </h2>
  <% if current_user.admin? %>
    <div> <%= link_to "Create category", [:new, @location, :category] %></div>
  <% end %>
<ul>
  <% @location.categories.each do |category| %>
    <li>
      <%= link_to category.name, [@location, category] %>
    </li>
  <% end %>
</ul>
<% if signed_in? %>
  <h2>Add a Post</h2>
  <%= render "create_post" %>
<% end %>
